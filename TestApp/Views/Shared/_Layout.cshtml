<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet"/>
    <link href="~/Content/font-awesome.min.css" rel="stylesheet"/>
    <script src="~/Scripts/jquery-2.2.3.min.js"></script>
    <script src="~/Scripts/knockout-3.4.0.js"></script>
    @RenderSection("links",false)

</head>
<body>
    <div class="leftSlide">
        <div class="wrapper">
            <div class="humburger">
                <i class="fa fa-bars" aria-hidden="true"></i>
            </div>
            <div class="leftContent">
                <img src="~/Content/img/me.png" alt="" />
                <h3>ПЕТР</h3>
                <h4>.Net ASP Developer</h4>
                <p>Тестовое задание для OLSO DEV House</p>
                <ul>
                    <li><a href="@Url.Action("Index","Start")">РЕЗЮМЕ</a></li>
                    <li><a href="@Url.Action("PersonsDetails","Start")">KNOCKOUT JS</a></li>
                </ul>
            </div>
        </div>
    </div>
<div>
    @RenderBody()
</div>
<footer></footer>
    <script type="text/javascript">
        $(document).ready(function () {
            var opn = false;
            $('.humburger').click(function () {
                if (opn === false) {
                    $(".leftSlide").css({
                        "left": "0",
                        "transition": "left 1s"
                    });
                    opn = true;
                } else {
                    $(".leftSlide").css({
                        "left": "-250px",
                        "transition": "left 1s"
                    });
                    opn = false;
                }
        });
    });
    </script>
    @RenderSection("scripts", false)
</body>
</html>
